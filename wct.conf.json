{
	"plugins": {
	  "local": {
			"browsers": [{
				"browserName": "chrome"
			}],
			"browserOptions": {
        "chrome": ["headless", "disable-gpu", "no-sandbox"]
      }
		},
		"istanbul": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/*.js"
      ],
      "exclude": [
        "/polymer/polymer.js",
        "/platform/platform.js"
      ]
    },
	  "sauce": {
		"browsers": [
		  {
			"browserName": "chrome",
			"platform": "OS X 10.12",
			"version": ""
		  },
		  {
			"browserName": "chrome",
			"platform": "Windows 10",
			"version": ""
		  },
		  {
			"browserName": "firefox",
			"platform": "OS X 10.12",
			"version": ""
		  },
		  {
			"browserName": "firefox",
			"platform": "Windows 10",
			"version": ""
		  },
		  {
			"browserName": "safari",
			"platform": "OS X 10.12",
			"version": ""
		  },
		  {
			"browserName": "microsoftedge",
			"platform": "Windows 10",
			"version": ""
		  }
		]
	  }
	}
}
